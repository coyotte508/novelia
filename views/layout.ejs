<!DOCTYPE html>  
<html lang="en">  
<head>
  <meta charset="utf-8">
  <title><%- title %> - LitNovel</title>
  <meta name="description" content="">
  <meta name="author" content="">
  <link rel="stylesheet" href="/assets/stylesheets/frontend.css?v=<%= req.version %>">
</head>
<body>
  <nav class="navbar navbar-dark bg-inverse navbar-fixed-top">
    <div class="container">
      <a class="navbar-brand" href="/">LitNovel</a>
      <button class="navbar-toggler hidden-md-up" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"></button>
  
      <div id="navbarResponsive" class="collapse navbar-toggleable-sm">
        <ul class="nav navbar-nav">
          <li class="nav-item<% if (title=="Home"){%> active <% } %>"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item<% if (title=="Contact us"){%> active <% } %>"><a href="/contact" class="nav-link">Contact</a></li>
        </ul>

        <ul class="nav navbar-nav navbar-md-right">
          <% if (req.user) { %>
            <li class="nav-item"><span class="navbar-text text-muted">Welcome, <%= req.user.displayName() %>!</span></li>  
            <li class="nav-item"><span class="navbar-text text-muted"><a href="/profile">Profile</a></span></li>
          <% } else { %>
          <li class="nav-item"><span class="navbar-text text-muted">Already have an account?</span></li>
          <li class="nav-item dropdown">
            <a href="/login" class="nav-link dropdown-toggle" data-toggle="dropdown" id="loginDropDown">Login</a>
            <ul id="login-dp" class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown-menu">
              <li>
               <div class="row">
                <div class="col-md-12">
                  Login via
                  <div class="social-buttons">
                    <a href="/auth/google" class="btn btn-google"><i class="fa fa-google-plus"></i> Google</a>
                  </div>
                  or
                  <form class="form" role="form" method="post" action="/login" accept-charset="UTF-8" id="login-nav">
                    <div class="form-group">
                     <label class="sr-only" for="email">Email address</label>
                     <input type="email" class="form-control" id="email" placeholder="Email address" name="email" required>
                   </div>
                   <div class="form-group">
                     <label class="sr-only" for="password">Password</label>
                     <input type="password" class="form-control" id="password" placeholder="Password" name="password" required>
                     <div class="help-block text-right"><a href="">Forget the password ?</a></div>
                   </div>
                   <input type="hidden" name="referrer" value="<%= req.path %>">
                   <div class="form-group">
                     <button type="submit" class="btn btn-primary btn-block">Sign in</button>
                   </div>
                   <!-- <div class="checkbox">
                     <label>
                       <input type="checkbox"> keep me logged-in
                     </label>
                   </div> -->
                 </form>
               </div>
               <div class="bottom text-center">
                New here ? <a href="/signup?referrer=<%= req.path %>"><b>Join Us</b></a>
            </ul>
          </li>
          <% } %>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>

<div class="container" style="padding-top: 10px; padding-bottom: 15px">

  <!-- CONTENT -->
  <%- body %>

</div><!-- /.container -->

<script src="/assets/javascript/jquery.min.js"></script>
<script src="/assets/javascript/frontend.js"></script>
</body>
</html>