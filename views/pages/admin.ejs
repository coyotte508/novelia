<% title = "Admin interface"; %>

<%- contentFor('body') %>

<div class="text-md-center">
  <h1><%= title %></h1>
  
  <br/>
  <div class="card">
    <div class="card-block bg-secondary">
      <p class="lead">Here is where the secret keys to the site are, all the gears of the website!</p>
      <p class="lead"><code>destroy()</code>, <code>create()</code>, <code>analyze()</code> this website.</p>
    </div>
  </div>
</div>

<div class="col-md-6">
  <h2 class="card-title">Statistics</h2>
  <ul>
    <li>Number of users: <%= stats.nbUsers %></li>
    <li>Number of novels: <%= stats.nbNovels %></li>
    <li>Number of chapters: <%= stats.nbChapters %></li>
  </ul>
</div>

<div class="col-md-6">
  <h2 class="card-title">User Actions</h2>
  <table class="table">
    <tr>
      <th>User</th>
      <th>Action</th>
      <th>Info</th>
    </tr>
    <% actions.forEach(action => { %>
    <tr>
      <td><% if (action.userLink) { %>
        <a href="<%- action.userLink%>"><%= action.user %></a>
      <% } else {%><%= action.user %><% }%></td>
      <td><%= action.action %></td>
      <td><%= action.data %></td>
    </tr>
    <% }); %>
  </table>
</div>