<% title = "Add a novel"; %>

<%- contentFor('body') %>

<h1 class="text-md-center"><%= title %></h1>

<% if (message.length > 0) { %>
  <div class="alert alert-danger"><%= message %></div>
<% } %>

<form method="post">
  <div class="form-group">
    <label for="novelTitle">Title of the novel</label>
    <input type="text" class="form-control" id="novelTitle" name="novelTitle" aria-describedby="titleHelp" placeholder="Awesome title for your novel" maxlength="80" value="<%= req.body.novelTitle %>" required>
    <small id="titleHelp" class="form-text text-muted">The title can not be changed later on, make sure to spell correctly!</small>
  </div>
  <div class="form-group">
    <label for="novelDescription">Description</label>
    <textarea class="form-control" name="novelDescription" id="novelDescription" rows="4" placeholder="The description must not be too vague and give readers an idea what they are going to read." maxlength="2000"><%- req.body.novelDescription%></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Add novel</button>
</form>